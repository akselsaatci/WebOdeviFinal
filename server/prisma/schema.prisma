// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  tc         String      @id
  email      String      @unique
  name       String
  password   String
  createdAt  DateTime    @default(now())
  isActive   Boolean     @default(true) // for email activation but i am not going to implement it
  complaints Complaint[]
}

model Complaint {
  id         Int              @id @default(autoincrement())
  title      String
  content    String
  answer     String?
  published  Boolean          @default(false)
  author     User             @relation(fields: [authorTc], references: [tc])
  authorTc   String
  company    Company          @relation(fields: [companyId], references: [id])
  companyId  Int
  createdAt  DateTime         @default(now())
  answeredAt DateTime?
  likeCounts Int              @default(0)
  images     ComplaintImage[]
}

model ComplaintImage {
  id          Int       @id @default(autoincrement())
  url         String
  complaint   Complaint @relation(fields: [complaintId], references: [id])
  complaintId Int
}

model Company {
  id                       Int         @id @default(autoincrement())
  authorizedPersonName     String
  authorizedPersonEmail    String      @unique
  authorizedPersonPassword String
  complaints               Complaint[]
}
